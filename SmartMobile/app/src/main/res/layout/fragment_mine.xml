<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.pansoft.app.smartmobile.activity.MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width    ="match_parent"
        android:layout_height   ="wrap_content"
        android:background      ="@color/colorTitle"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="我的"
            style="@style/com_title_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/my_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_grxx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_user_photo"
                    android:layout_gravity="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/shape_mine_user_pic"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/task_detail_title_text"
                        android:textSize="18sp"
                        android:text="username"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/task_detail_title_text"
                            android:text="签名："/>
                        <TextView
                            android:id="@+id/tv_user_sign"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            style="@style/task_detail_title_text"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/go"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:padding="10dp"
                android:background="@color/colorMineTextBG"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/mine_title_text"
                        android:text="部门:"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_user_dept"
                        android:layout_width="wrap_content"
                        style="@style/mine_title_text"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/colorMineTextBG"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/mine_title_text"
                        android:text="手机:"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_user_mobile"
                        android:layout_width="wrap_content"
                        style="@style/mine_title_text"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        style="@style/mine_item_margin"
        android:id="@+id/rl_grxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_mine_bg"
        android:layout_marginBottom="2dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_grxx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            style="@style/mine_item_text"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_grxx"
            android:layout_toEndOf="@+id/iv_grxx"
            android:id="@+id/tv_grxx" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/go"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/mine_item_margin"
        android:id="@+id/rl_sqdl"
        android:background="@drawable/ll_mine_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_sqdl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/accredit"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授权代理"
            style="@style/mine_item_text"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_sqdl"
            android:layout_toEndOf="@+id/iv_sqdl"
            android:id="@+id/tv_sqdl" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/go"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/mine_item_margin"
        android:id="@+id/rl_wddj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_mine_bg"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_wddj"
            android:src="@drawable/mydocument"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的单据"
            style="@style/mine_item_text"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_wddj"
            android:layout_toEndOf="@+id/iv_wddj"
            android:id="@+id/tv_wddj" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/go"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/mine_item_margin"
        android:id="@+id/rl_xzdj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_mine_bg"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_xzdj"
            android:src="@drawable/mydocument"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增单据"
            style="@style/mine_item_text"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_xzdj"
            android:layout_toEndOf="@+id/iv_xzdj"
            android:id="@+id/tv_xzdj" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/go"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <Button
        android:id ="@+id/btn_logout"
        android:visibility="gone"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:text ="退出登录"
        android:layout_gravity ="center"
        android:background ="@drawable/com_button_bg"
        android:textColor ="#fff"
        android:textSize  ="20dp"
        android:padding ="10dp"/>
 </LinearLayout>