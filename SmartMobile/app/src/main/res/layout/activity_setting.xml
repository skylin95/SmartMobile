<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width    ="match_parent"
        android:layout_height   ="wrap_content"
        android:background      ="@color/colorTitle"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="设置"
            style="@style/com_title_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/setting_pic"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:id="@+id/rl_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rl_setting_bg"
        android:onClick="onClick"
        android:padding="10dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="协议"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="20dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rl_setting_bg"
        android:onClick="onClick"
        android:padding="10dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="域名"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="20dp"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rl_setting_bg"
        android:onClick="onClick"
        android:padding="10dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="端口"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="20dp"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rl_setting_bg"
        android:onClick="onClick"
        android:padding="10dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="20dp"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_logintype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rl_setting_bg"
        android:onClick="onClick"
        android:padding="10dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录方式"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="20dp"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_testNetwork"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试网络"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/com_button_bg"/>
</LinearLayout>