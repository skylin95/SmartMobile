<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:id="@+id/ll_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorTitle"
        style="@style/task_detail_padding"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_taskname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/task_detail_title_text"
                android:singleLine="true"
                android:textSize="18sp"
                />
        </LinearLayout>

        <!-- 制单日期 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/time_task_detail"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_time"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/task_detail_title_text"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/task_detail_padding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TaskTextView1"
                android:singleLine="true"
                android:text="经办人:"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_originator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TaskTextView1"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/amount"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_amount"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/amount"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/task_detail_padding"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TaskTextView2"
            android:text="部门："/>
        <TextView
            android:id="@+id/tv_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            style="@style/TaskTextView2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        style="@style/task_detail_padding"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TaskTextView2"
            android:text="事由："/>
        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/task_detail_title_text"/>
    </LinearLayout>
    <LinearLayout
        style="@style/task_detail_padding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TaskTextView2"
            android:text="备注："/>
        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="wrap_content"
            style="@style/TaskTextView2"/>
    </LinearLayout>

</LinearLayout>