<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_image_thumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/image_default"/>

        <TextView
            android:id="@+id/tv_image_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称："
            android:textSize="15dp"
            android:layout_toRightOf="@id/iv_image_thumb"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/tv_image_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            android:layout_toRightOf="@id/tv_image_name_title"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/tv_image_size_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大小："
            android:textSize="15dp"
            android:layout_toRightOf="@id/iv_image_thumb"
            android:layout_below="@id/tv_image_name_title"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/tv_image_size_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="15dp"
            android:layout_below="@id/tv_image_name_value"
            android:layout_toRightOf="@id/tv_image_name_title"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/tv_image_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传时间："
            android:textSize="15dp"
            android:layout_toRightOf="@id/iv_image_thumb"
            android:layout_below="@id/tv_image_size_title"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:id="@+id/tv_image_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="15dp"
            android:layout_below="@id/tv_image_size_value"
            android:layout_toRightOf="@id/tv_image_time_title"
            android:layout_marginBottom="1dp"/>
    </RelativeLayout>
</LinearLayout>