<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ll_state_bg"
    >
    <LinearLayout
        android:id="@+id/ll_left"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/tv_flowName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="单据流程"
            style="@style/TaskTextView1"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托人："
                    style="@style/TaskTextView2"/>
                <TextView
                    android:id="@+id/tv_wtrName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TaskTextView2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="受托人："
                    style="@style/TaskTextView2"/>
                <TextView
                    android:id="@+id/tv_strName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TaskTextView2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time"/>
            <TextView
                android:id="@+id/tv_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TaskTextView2"
                android:text="2016-8-19 16:48"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 至 "
                style="@style/TaskTextView2"/>
            <TextView
                android:id="@+id/tv_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TaskTextView2"
                android:text="2016-8-19 16:48" />
        </LinearLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorStroke"/>
    </LinearLayout>
    <TextView
        android:id="@+id/ll_right"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="删除"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorRefuse"/>

</LinearLayout>