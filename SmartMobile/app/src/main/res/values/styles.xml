<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoTitle" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="x" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#fff</item>
    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ll_task_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AnimationToast">
        <item name="android:windowEnterAnimation">@anim/toast_in</item>
        <item name="android:windowExitAnimation">@anim/toast_out</item>
    </style>
    <style name="TaskTextView1">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="ServiceTextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="TaskTextView2">
        <item name="android:textColor">@color/colorhintText</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="task_detail_title_text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="mine_title_text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="mine_item_text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="amount">
        <item name="android:textColor">#2993e1</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="com_title_text">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="approveTextStyle">
        <item name="android:textColor">#2993e1</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="task_margin">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="mine_item_margin">
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="task_detail_padding">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="edit_AlertDialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!--是否启用标题栏-->
        <item name="android:background">@drawable/ll_task_bg</item>
        <item name="android:windowBackground">@color/vifrification</item>
        <item name="android:backgroundDimEnabled">true</item> <!--是否使用背景半透明-->
    </style>

    <style name="search_condition_layout">
        <item name="android:padding">20dp</item>
    </style>
    <style name="search_bottom_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
</resources>
